<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://{{ hadoop_master_name }}:9000</value>
	</property>
	<property>
		<name>hadoop.tmp.dir</name>
		<value>/home/hadoop/tmp</value>
	</property>
	<property>
		<name>hadoop.http.staticuser.user</name>
		<value>hadoop</value>
	</property>

	<property>
		<name>ipc.client.bind.wildcard.addr</name>
		<value>true</value>
	</property>
	<!-- Common figuration -->

	<property>
		<name>hadoop.security.authentication</name>
		<value>kerberos</value>
	</property>
	<property>
		<name>hadoop.security.authorization</name>
		<value>true</value>
	</property>
	<property>
		<name>hadoop.rpc.protection</name>
		<value>authentication</value>
	</property>
	<property>
		<name>hadoop.rpc.authentication</name>
		<value>kerberos</value>
	</property>

	<property>
		<name>hadoop.security.auth_to_local</name>
		<value>
			RULE:[2:$1/$2@$0]([ndj]n/.*@GS.COM)s/.*/hadoop/
			RULE:[2:$1/$2@$0]([rn]m/.*@GS.COM)s/.*/yarn/
			RULE:[2:$1/$2@$0](jhs/.*@GS.COM)s/.*/mapred/
			DEFAULT
		</value>
	</property>
	<property>
		<name>hadoop.proxyuser.admin.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.admin.groups</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.root.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.root.groups</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hbase.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hbase.groups</name>
		<value>*</value>
	</property>

	<property>
		<name>hadoop.user.group.static.mapping.overrides</name>
		<value>sn=supergroup;nn=supergroup;dn=supergroup</value>
	</property>

	<!-- End of Common figuration -->


	<!-- NameNode -->
	<property>
		<name>dfs.block.access.token.enable</name>
		<value>true</value>
	</property>
	<property>
		<name>dfs.namenode.kerberos.principal</name>
		<value>nn/_HOST@GS.COM</value>
	</property>
	<property>
		<name>dfs.namenode.keytab.file</name>
		<value>{{ hadoop_install_folder }}/latest/keytabs/hdfs_all_nn.keytab</value>
	</property>
	<property>
		<name>dfs.namenode.kerberos.internal.spnego.principal</name>
		<value>*</value>
	</property>
	<property>
		<name>dfs.web.authentication.kerberos.principal</name>
		<value>HTTP/_HOST@GS.COM</value>
	</property>

	<property>
		<name>dfs.web.authentication.kerberos.keytab</name>
		<value>{{ hadoop_install_folder}}/latest/keytabs/spnego.service.keytab</value>
	</property>
	<property>
		<name>dfs.http.policy</name>
		<value>HTTPS_ONLY</value>
	</property>
	<!-- End of NameNode -->

	<!-- Secondary NameNode -->
	<property>
		<name>dfs.namenode.secondary.http-address</name>
		<value>0.0.0.0:9868</value>
	</property>
	<property>
		<name>dfs.namenode.secondary.https-address</name>
		<value>0.0.0.0:9869</value>
	</property>
	<property>
		<name>dfs.secondary.namenode.keytab.file</name>
		<value>{{ hadoop_install_folder }}/latest/keytabs/hdfs_all_sn.keytab</value>
	</property>
	<property>
		<name>dfs.secondary.namenode.kerberos.principal</name>
		<value>sn/_HOST@GS.COM</value>
	</property>
	<property>
		<name>dfs.secondary.namenode.kerberos.internal.spnego.principal</name>
		<value>*</value>
	</property>
	<!-- End of Secondary NameNode -->

	<!-- Datanode info -->
	<property>
		<name>dfs.datanode.data.dir.perm</name>
		<value>700</value>
	</property>
	<property>
		<name>dfs.datanode.address</name>
		<value>0.0.0.0:1004</value>
	</property>
	<property>
		<name>dfs.datanode.http.address</name>
		<value>0.0.0.0:1006</value>
	</property>
	<property>
		<name>dfs.datanode.https.address</name>
		<value>0.0.0.0:9865</value>
	</property>
	<property>
		<name>dfs.datanode.kerberos.principal</name>
		<value>dn/_HOST@GS.COM</value>
	</property>
	<property>
		<name>dfs.datanode.keytab.file</name>
		<value>{{ hadoop_install_folder }}/latest/keytabs/hdfs_all_dn.keytab</value>
	</property>
	<property>
		<name>dfs.data.transfer.protection</name>
		<value>authentication</value>
	</property>
	<property>
		<name>dfs.client.slow.io.warning.threshold.ms</name>
		<value>120000</value>
	</property>

	<!-- End of Datanode info -->

	<!-- Journal node info -->
	<property>
		<name>dfs.journalnode.kerberos.principal</name>
		<value>jn/_HOST@GS.COM</value>
	</property>
	<property>
		<name>dfs.journalnode.keytab.file</name>
		<value>{{ hadoop_install_folder }}/latest/keytabs/hdfs_all_jn.keytab</value>
	</property>
	<property>
		<name>dfs.journalnode.kerberos.internal.spnego.principal</name>
		<value>HTTP/_HOST@GS.COM</value>
	</property>
	<property>
		<name>dfs.web.authentication.kerberos.keytab</name>
		<value>{{ hadoop_install_folder }}/latest/keytabs/spnego.service.keytab</value>
	</property>
	<property>
		<name>dfs.journalnode.https-address</name>
		<value>0.0.0.0:8481	</value>
	</property>
	<!-- end of Journal node info -->


	<property>
		<name>yarn.nodemanager.principal</name>
		<value>nm/_HOST@GS.COM</value>
	</property>
	<property>
		<name>yarn.resourcemanager.principal</name>
		<value>rm/_HOST@GS.COM</value>
	</property>
	<property>
		<name>yarn.nodemanager.keytab</name>
		<value>/{{ hadoop_install_folder }}/latest/keytabs/hdfs_all_nm.keytab</value>
	</property>
	<property>
		<name>yarn.nodemanager.container-executor.class</name>
		<value>org.apache.hadoop.yarn.server.nodemanager.LinuxContainerExecutor
		</value>
	</property>
	<property>
		<name>yarn.nodemanager.linux-container-executor.group</name>
		<value>hadoop</value>
	</property>
	<property>
		<name>yarn.nodemanager.webapp.https.address</name>
		<value>0.0.0.0:8044</value>
	</property>


	<!-- SSL for jetty : should be in server-ssl.xml in 3.2.0 -->
	<property>
		<name>ssl.server.keystore.type</name>
		<value>jks</value>
	</property>
	<property>
		<name>ssl.server.keystore.location</name>
		<value>/home/hadoop/latest/etc/hadoop/keystore.jks</value>
	</property>
	<property>
		<name>ssl.server.keystore.password</name>
		<value>password</value>
	</property>

	<!-- Server Trust Store -->
	<property>
		<name>ssl.server.truststore.type</name>
		<value>jks</value>
	</property>
	<property>
		<name>ssl.server.truststore.location</name>
		<value>/home/hadoop/latest/etc/hadoop/truststore.jks</value>
	</property>
	<property>
		<name>ssl.server.truststore.password</name>
		<value>changeit</value>
	</property>
	<property>
		<name>ssl.server.truststore.reload.interval</name>
		<value>10000</value>
	</property>

	<property>
		<name>hadoop.http.authentication.simple.anonymous.allowed</name>
		<value>true</value>
	</property>
	<property>
		<name>hadoop.http.authentication.type</name>
		<value>simple</value>
	</property>
</configuration>